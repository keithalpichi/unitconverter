{
  "name": "@keithalpichi/unitconverter",
  "version": "1.0.0",
  "description": "Convert one unit to another",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "rm -rf ./dist && tsc",
    "test": "jest --watchAll",
    "lint": "tslint -p .",
    "test:no-watch": "jest",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && npm run test:no-watch",
    "preversion": "npm run lint",
    "version": "git add package.json package-lock.json",
    "postversion": "git push origin master && git push --tags"
  },
  "directories": {
    "lib": "lib"
  },
  "keywords": [
    "unit",
    "converter",
    "pounds",
    "kilogram",
    "weight",
    "mass",
    "length",
    "imperial",
    "metric"
  ],
  "author": "Keith Alpichi",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@types/jest": "^23.3.13",
    "babel-jest": "^24.1.0",
    "husky": "^1.3.1",
    "jest": "^24.0.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.3.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test:no-watch"
    }
  }
}